<div id="scrumbler_sprint" style="">
	<% if sprint %>
	<% unless sprint.statistics_available?%>
	<div class="nodata">
		<%= t(:scrumbler_sprint_statistics_not_available)%>
	</div>
	<%end%>
	<div class="contextual">
		<%= link_to l(:label_statistics), burndown_project_scrumbler_sprint_path(@project, sprint), :class=> "icon icon-scrumbler-burndown" if sprint.statistics_available? %>
		<%= link_to l(:label_sprint_settings), project_scrumbler_sprint_settings_path(@project, sprint, 'general'), :class=> "icon icon-scrumbler-settings" if authorize_for(:scrumbler_sprints, :settings)%>
                <%=  %>
	</div>
	<%= raw draw_scrumbler_dashboard(sprint) %>
	<% else %>
	<p id="errorExplanation">
		<%= l :error_sprint_not_found_in_project %>
	</p>
	<% end %>
</div>
