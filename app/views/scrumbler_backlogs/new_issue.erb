<% labelled_tabular_form_for :issue, @issue, :url => {:controller => 'scrumbler_backlogs', :action => 'create_issue', :project_id => @project},
                             :html => {:multipart => true, :id => 'issue-form', :class => 'tabular new-issue-form'} do |f| %>
    <%= error_messages_for 'issue' %>
    <p><%= f.select :tracker_id, @project.trackers.collect {|t| [t.name, t.id]}, :required => true %></p>
    <p><%= f.text_field :subject, :size => 80, :required => true %></p>
	<%= render :partial => 'issues/form_custom_fields'%>
	<%= f.submit%>
	<%= button_to_function(l(:button_cancel), "$(this.parentNode.parentNode).hide(); return false;")%>
    <%= javascript_tag "Form.Element.focus('issue_subject');" %>
<% end %>